<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8.0.76-ea"
          fx:controller="QuestionBank.MainWindowController"
          alignment="CENTER" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@MaterialDesign.css" />
        <URL value="@MaterialDesign_ToggleSwitch.css" />
    </stylesheets>
    <rowConstraints>
        <RowConstraints percentHeight="5" />
        <RowConstraints fillHeight="true" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="30" />
        <ColumnConstraints fillWidth="true" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="5" right="5" top="10" />
    </padding>
    <TextField fx:id="searchBox" GridPane.columnIndex="1" GridPane.fillWidth="true" GridPane.rowIndex="0" />
    <ListView fx:id="addedToWorksheet" orientation="VERTICAL" GridPane.columnIndex="0" GridPane.fillHeight="true" GridPane.fillWidth="true" GridPane.rowIndex="1" />
    <ListView orientation="VERTICAL" GridPane.columnIndex="1" GridPane.fillHeight="true" GridPane.fillWidth="true" GridPane.rowIndex="1" />
</GridPane>
